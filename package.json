  },
  "homepage": "https://github.com/solomonneas/rapid7-mcp#readme",
  "bugs": {
    "url": "https://github.com/solomonneas/rapid7-mcp/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
