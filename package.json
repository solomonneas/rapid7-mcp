{
  "name": "rapid7-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for the Rapid7 InsightIDR SIEM platform",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "rapid7-mcp": "dist/index.js"
  },
  "scripts": {
